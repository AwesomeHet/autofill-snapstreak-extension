{
  "manifest_version": 2,
  "name": "Snapchat AutoFill Extension",
  "version": "1.0",
  "description": "Auto-fill Snapchat friend details into forms.",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "snapchat_icon.png"
  },
  "icons": {
    "48": "snapchat_icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    "friends.json"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
